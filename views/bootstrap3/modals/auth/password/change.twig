{% extends 'modals/narrow.twig' %}

{% set modal_name = 'passwordChange' %}
{% set modal_title = 'Смена пароля' %}

{% block modal_body %}
	<div class="form-group required{{ errors.password_old ? ' has-error' : '' }}">
		<label for="password_old">Текущий пароль</label>
		<input type="password" name="password_old" id="password_old" class="form-control" data-modalfocus required />
		{% if errors.password_old %}
			<span class="help-block">{{ errors.password_old | first }}</span>
		{% endif %}
	</div>
	<div class="form-group required{{ errors.password ? ' has-error' : '' }}">
		<label for="password">Пароль</label>
		<input type="password" name="password" id="password" class="form-control" required />
		{% if errors.password %}
			<span class="help-block">{{ errors.password | first }}</span>
		{% endif %}
	</div>
{% endblock %}
