<li class="dropdown">
	<a class="dropdown-toggle" data-toggle="dropdown" href="#"><img src="{{ game.icon }}" alt="{{ game.name }}" class="navbar-img" /> {% if game.default %}Игры{% else %}{{ game.name }}{% endif %}<b class="caret"></b></a>
	<ul class="dropdown-menu">
		{% for g in games %}
			<li><a href="{{ g.url }}" class="icon-menu icon-{{ g.alias }}">{% if g.default %}Все игры{% else %}{{ g.name }}{% endif %}</a></li>
		{% endfor %}
  </ul>
</li>
{% for m in menu %}
	{% if m.items %}
		<li class="dropdown">
			<a class="dropdown-toggle" data-toggle="dropdown" href="{{ m.link }}">{{ m.text }}<b class="caret"></b></a>
			<ul class="dropdown-menu">
				{% for i in m.items %}
		    		<li><a href="{{ i.link }}">{{ i.text }}</a></li>
				{% endfor %}
			</ul>
		</li>
	{% else %}
		<li><a href="{{ m.link }}">{{ m.text }}</a></li>
	{% endif %}
{% endfor %}
