						{% for eg in event_games %}
							<li>
								<div class="radio">
									<label><input type="radio" name="event_game" id="event_game_{{ eg.id }}" data-id="{{ eg.id }}">{{ eg.name }}</label>
								</div>
							</li>
						{% endfor %}
						<li><a href="#" class="disabled">Тип события:</a></li>
