{% extends 'main/layout.twig' %}

{% set no_disqus = true %}
{% set no_social = true %}

{% block content %}
	<div class="panel panel-primary">
		<div class="panel-heading panel-title">
			<header class="icon-{{ game.alias }}" title="[{{ game.name }}] {{ title }}">{{ title }}</header>
		</div>
	  	<div class="panel-body breadcrumbs">
	  		<ol class="breadcrumb">
	  			<li><a href="{{ path_for('main.index') }}">{{ site_name }}</a></li>
	  			<li class="active">{{ title }}</li>
			</ol>
		</div>
		{% if events %}
			<div class="panel-body linkblock-big">
				{% for e in events %}
					<div class="icon-{{ e.game.alias }}">
						<a title="[{{ e.game.name }}] {{ e.name|raw }}" href="{{ path_for('main.event', { 'id': e.id }) }}">{{ e.name }}</a>
						<span class="nowrap">[{{ e.starts_at }}{% if e.ends_at %} — {{ e.ends_at }}{% endif %}]</span>
					</div>
				{% endfor %}
			</div>
		{% else %}
			<div class="panel-body">
				По заданным параметрам события не найдены.
			</div>
		{% endif %}
	</div>
{% endblock %}
