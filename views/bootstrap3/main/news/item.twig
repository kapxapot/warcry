{% extends 'main/layout.twig' %}

{% import 'main/macros.twig' as m %}

{% block content %}
	<div class="panel panel-primary">
		<div class="panel-heading panel-title">
			<header class="icon-{{ news_item.game.alias }}" title="[{{ news_item.game.name }}] {{ news_item.title }}">{{ news_item.title }}{% if not news_item.start_date %} <u>Не опубликована!</u>{% endif %}</header>
			<div class="panel-title-buttons">
				{{ m.edit_button('news', news_item.id, news_item.access.edit) }}
			</div>
		</div>
	  	<div class="panel-body breadcrumbs">
	  		<ol class="breadcrumb">
	  			<li><a href="{{ path_for('main.index') }}">{{ site_name }}</a></li>
	  			{% if not news_item.game.default %}<li><a href="{{ news_item.game.url }}">{{ news_item.game.name }}</a></li>{% endif %}
	  			<li class="active">{{ news_item.title }}</li>
			</ol>
		</div>
	    {% include 'main/news/bodyfooter.twig' %}
	</div>
{% endblock %}
