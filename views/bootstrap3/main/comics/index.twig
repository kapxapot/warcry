{% extends 'main/layout.twig' %}

{% block content %}
	<div class="panel panel-primary">
		<div class="panel-heading panel-title">
		  <span class="icon-{{ game.alias }}" title="[{{ game.name }}] {{ title }}">{{ title }}</span>
		</div>
	  	<div class="panel-body breadcrumbs">
	  		<ol class="breadcrumb">
	  			<li><a href="{{ path_for('main.index') }}">{{ site_name }}</a></li>
	  			<li class="active">{{ title }}</li>
			</ol>
		</div>
		
	  	<div class="panel-body">
			<ul class="nav nav-tabs" role="tablist">
		  		{% if series %}
					<li role="presentation" class="active"><a href="#series" aria-controls="series" role="tab" data-toggle="tab">Серии</a></li>
				{% endif %}
		  		{% if standalones %}
					<li role="presentation"><a href="#standalones" aria-controls="standalones" role="tab" data-toggle="tab">Одиночные</a></li>
				{% endif %}
			</ul>

			<div class="tab-content">
				{% if series %}
					<div role="tabpanel" class="tab-pane fade in active" id="series">
						<div class="flex-wrapper comics">
							{% for s in series %}
								<div class="flex-item flex-item-shaded overlay-wrapper comic-image">
									<a href="{{ s.page_url }}" title="{{ s.name_ru }} ({{ s.comic_count }}&nbsp;{{ s.comic_count_str }})">
										<img src="{{ s.cover_url }}" class="card-image" />
										<span class="overlay overlay-full">{{ s.name_ru }}</span>
									</a>
								</div>
							{% endfor %}
						</div>
					</div>
				{% endif %}
				{% if standalones %}
					<div role="tabpanel" class="tab-pane fade" id="standalones">
						<div class="flex-wrapper comics">
							{% for c in standalones %}
								<div class="flex-item flex-item-shaded overlay-wrapper comic-image">
									<a href="{{ c.page_url }}" title="{{ c.name_ru }}">
										<img src="{{ c.cover_url }}" class="card-image" />
										<span class="overlay overlay-full">{{ c.name_ru }}</span>
									</a>
								</div>
							{% endfor %}
						</div>
		    		</div>
		    	{% endif %}
		    </div>
		</div>
	</div>
{% endblock %}
