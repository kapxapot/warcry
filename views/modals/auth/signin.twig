{% extends 'modals/narrow.twig' %}

{% set modal_name = 'signIn' %}
{% set modal_title = 'Вход' %}
{% set modal_save_label = 'Войти' %}

{% block modal_body %}
	<div class="form-group required{{ errors.login ? ' has-error' : '' }}">
		<label for="login">Логин / E-mail</label>
		<input type="text" name="login" id="login" placeholder="ваш логин или ваша@поч.та" class="form-control" data-modalfocus required />
		{% if errors.email %}
			<span class="help-block">{{ errors.login | first }}</span>
		{% endif %}
	</div>
	<div class="form-group required{{ errors.password ? ' has-error' : '' }}">
		<label for="password">Пароль</label>
		<input type="password" name="password" id="password" class="form-control" required />
		{% if errors.password %}
			<span class="help-block">{{ errors.password | first }}</span>
		{% endif %}
	</div>
	<span class="help-block">Нет логина? <a href="javascript:void(0);" ng-click="switchFromTo('{{ modal_name }}', 'signUp')">Зарегистрируйтесь</a>.</span>
{% endblock %}
