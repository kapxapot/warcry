<nav class="navbar navbar-default">
	<div class="container-fluid">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
				<span class="sr-only">Toggle navigation</span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
				<span class="icon-bar"></span>
			</button>
			<span class="navbar-brand">
				<a href="{{ path_for('home') }}">{{ site_name }}</a> / <a href="{{ path_for('admin.index') }}">{{ admin_title }}</a>
			</span>
		</div>
		<div id="navbar" class="navbar-collapse collapse">
			{% if auth.user %}
				<ul class="nav navbar-nav">
					{% for entity, label in entity_menu if can(entity, 'read_own') %}
						<li{% if alias == entity %} class="active"{% endif %}><a href="{{ path_for('admin.' ~ entity) }}">{{ label }}</a></li>
					{% endfor %}
				</ul>
			{% endif %}
			<ul class="nav navbar-nav navbar-right">
				{% if auth.user %}
					<li class="dropdown">
					  	<a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">{{ auth.user.name }} ({{ auth.role.name }}) <span class="caret"></span></a>
						<ul class="dropdown-menu">
							<li><a href="javascript:void(0);" ng-click="passwordChange();">Сменить пароль</a></li>
 							<li role="separator" class="divider"></li>
							<li><a href="{{ path_for('auth.signout') }}">Выход</a></li>
 						</ul>
					</li>
				{% else %}
					<li><a href="javascript:void(0);" ng-click="signUp();">Регистрация</a></li>
					<li><a href="javascript:void(0);" ng-click="signIn();">Вход</a></li>
				{% endif %}
			</ul>
		</div>
	</div>
</nav>			
